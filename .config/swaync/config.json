{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "overlay",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "cssPriority": "user",
  "control-center-margin-top": 8,
  "control-center-margin-bottom": 8,
  "control-center-margin-right": 8,
  "control-center-margin-left": 8,
  "notification-2fa-action": false,
  "notification-inline-replies": false,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 5,
  "timeout-low": 3,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "relative-timestamps": true,
  "control-center-width": 450,
  "control-center-height": 800,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "No Notifications",
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": ["title", "notifications", "buttons-grid", "mpris", "volume"],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "  Clear All  ",
      "clear-all-button": true
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "  Clear All  "
    },
    "notifications": {},
    "mpris": {
      "show-album-art": "when-available"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12,
      "show-album-art": "when-available"
    },
    "volume": {
      "label": "󰕾"
    },
    "backlight": {
      "label": "󰃞",
      "device": "amdgpu_bl1",
      "subsystem": "backlight"
    },
    "buttons-grid": {
      "buttons-per-row": 3,
      "actions": [
        {
          "label": "󰍷 Do Not Disturb",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && swaync-client --dnd-on || swaync-client --dnd-off'",
          "update-command": "sh -c '[[ $(swaync-client --get-dnd) == true ]] && echo true || echo false'"
        },
        {
          "label": "󰈈 Night Light",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && hyprsunset || pkill hyprsunset'",
          "update-command": "sh -c 'pgrep -x hyprsunset > /dev/null && echo true || echo false'"
        },
        {
          "label": "󰄀 Screenshot",
          "type": "normal",
          "active": false,
          "command": "sh -c 'swaync-client --close-panel && sleep 1 && hyprshot -m output -m DP-1'"
        }
      ]
    }
  }
}
