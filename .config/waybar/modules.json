{
"hyprland/workspaces": {
    "format":"{name}",
    "format-icons": {
      "active": "ÔÜí",
      "default": "ÔÑë"
    },
    "persistent-workspaces":{
	"1": [],
	"2": [],
	"3": [],
	"4": [],
	"5": [],
	"6": []
    }
  },

  "custom/logo": {
    "format": " "
  },
  "custom/apps": {
    "format" : "  ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/app_menu.xml",
        "menu-actions": {
            "home": "exec dolphin ~ ",
            "downloads": "exec dolphin --platformtheme qt6ct ~/Downloads/ ",
            "documents": "exec dolphin --platformtheme qt6ct ~/Documents/ ",
            "pictures": "exec dolphin --platformtheme qt6ct ~/Pictures/ ",
            "firefox": "exec firefox",
            "mail": "exec thunderbird",
            "settings": "exec systemsettings &"
        },
},
  "group/hardware": {
	"orientation": "inherit",
	"drawer": {
		"transition-duration": 300,
		"children-class": "not-memory",
		"transition-left-to-right": false
	},        
	"modules": [
		"custom/system",
		"cpu",
		"temperature",
		"disk",
		"memory"
	]
	},
  "mpris": {
	"format": "{player} {player_icon} {artist} - {title}",
	"format-paused": "{player} {status_icon} <i>{artist} - {title}</i>",
	"player-icons": {
		"default": "‚ñ∂",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "‚è∏"
	},
	// "ignored-players": ["firefox"]
  },
  "custom/system": {
	 "format": "<span size='small'> Óë≥ </span>",
	 "tooltip": false
  },
  "tray": {
    "icon-size": 18,
    "spacing": 5,
    "icons": {
        "blueman": "bluetooth",
        "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
    }
  },
  "clock": {
    "interval": 1,
    "timezone": ["Europe/Amsterdam",
                 "Canada/Toronto"               
  ],
    "tooltip-format": "<big>{:%Y %B - %H:%M} {tz_list}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%a %d %b %Y  |  %H:%M:%S}",
    "calendar": {
             "mode"          : "year",
             "mode-mon-col"  : 3,
             "weeks-pos"     : "right",
             "on-scroll"     : 1,
             "format": {
                       "months":     "<span color='#ffead3'><b>{}</b></span>",
                       "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                       "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                       "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                       "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                       }
               },
   "actions":  {
               "on-click-right": "mode",
               "on-scroll-up": "tz_up",
               "on-scroll-down": "tz_down",
               "on-scroll-up": "shift_up",
               "on-scroll-down": "shift_down"
               }
  },
  "network": {
      "interface": "enp5s0",
      "format": "{ifname}",
      "format-ethernet": "Û∞àÅ",
      "format-disconnected": "Û∞àÇ", //An empty format will hide the module.
      "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
      "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
      "tooltip-format-ethernet": "{bandwidthDownBytes} / {bandwidthUpBytes}",
      "tooltip-format-disconnected": "Disconnected",
      "interval": 1,
      "max-length": 50
  },
  "cpu": {
    "interval": 1,
    "format": "Ôãõ  {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7} {usage:>2}%",
    "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
  },
  "memory": {
    "interval": 30,
    "format": "ÓøÖ  {used:0.1f}G/{total:0.1f}G"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ® "]
    },
    "on-click": "pavucontrol"
  },
  "custom/lock": {
    "tooltip": false,
    "on-click": "sh -c '(sleep 0.5s; hyprlock)' & disown",
    "format": "ÔÄ£"
  },
  "custom/server_status_1": {
    "format": "{text}",
    "exec": "~/.local/scripts/check_server_1",
    "interval": 2,
    "return-type": "json"
  },
  "custom/server_status_2": {
    "format": "{text}",
    "exec": "~/.local/scripts/check_server_2",
    "interval": 2,
    "return-type": "json",
    "tooltip": false
  },
  "custom/server_status_3": {
    "format": "{text}",
    "exec": "~/.local/scripts/check_server_3",
    "interval": 2,
    "return-type": "json",
    "tooltip": false
  },
  "custom/server_status_4": {
    "format": "{text}",
    "exec": "~/.local/scripts/check_server_4",
    "interval": 2,
    "return-type": "json",
    "tooltip": false
  },

